                            <source src="lectures/optics_light.mp4" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                    </li>
                </ul>
            </div>

            <!-- Chemistry Lectures -->
            <div class="subject">
                <h3>Chemistry</h3>
